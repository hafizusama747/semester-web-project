<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
    <div class="container">
      <h1>Edit Product</h1>
        <form action="/products/edit/<%= product._id%>" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title" > <b>Title</b></label>
                <input type="text" class="form-control" name="title" value="<%= product.name%>"  required>
            </div>

            <div class="form-group">
                <label for="description" ><b>Description</b></label>
                <textarea type="text"  class="form-control"  name="description"  required><%= product.desc%></textarea>
            </div>

            <div class="form-group">
                <label for="price" ><b>Price</b></label>
                <input type="text"  class="form-control"  name="price" value="<%= product.price%>" required>
            </div>

            <div class="form-group">
                <label for="image" ><b>Upload Image</b></label>
                <input type="file"  class="form-control-file" id="image" name="image" required>
            </div>
            
            <div>
                <a href="/products" class="btn btn-warning"><b>Cancel</b></a>
                <button  type="submit" class="btn btn-primary"><b>Save</b></button>
            </div>

        </form>
        
      </div>
  
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>